{
    "openapi":"3.0.0",
    "info":{
        "title":"MovieFlix Api",
        "description":"API responsável por genrenciar os filmes do MovieFlix.",
        "version":"1.0.0"
    },

    "paths":{
        "/movies":{
            "get":{
                "tags":["Movie Routes"],
                "summary":"Obter todos os filmes",
                "responses":{
                    "200":{
                        "description":"Retorna uma lista de filmes.",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"array",
                                    "items":{
                                        "$ref":"#/components/schemas/Movie"
                                    }
                                }
                            }
                        }
                    }
                },
                "":""
            }
        },

        "/movies/{id}":{
            "put":{
                "tags":["Movie Routes"],
                "summary":"Atulizando filmes",
                "parameters":[{
                    "name":"id",
                    "in":"path",
                    "required":true,
                    "description":"Id do filme a ser atualizado.",
                    "schema":{
                        "type":"integer"
                    }
                }],
                "requestBody":{
                    "required":true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schemas/MovieInput"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Filme atualizado com sucesso!"
                    },
                    "404":{
                        "description":"Filme não encontrado!"
                    },
                    "500":{
                        "description":"Falha ao atualizar o registro do filme!"
                    }
                }
                
            },

            "delete":{
                "tags":["Movie Routes"],
                "summary":"Remover filmes",
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "required":true,
                        "description":"Id do filme a ser removido.",
                        "schema":{
                            "type":"integer"
                        }
                    }
                ],
                "responses":{
                    "200":{
                        "description":"Filme removido com sucesso!"
                    },
                    "404":{
                        "description":"Filme não encontrado!"
                    },
                    "500":{
                        "description":"Não foi possivel remover o filme"
                    }
                }
            }
        },

        "/movies/{genreName}":{
            "get":{
                "tags":["Movie Routes"],
                "summary":"Filtrar filmes por genero",
                "parameters":[
                    {
                        "name":"genreName",
                        "in":"path",
                        "required":true,
                        "description":"Nome do genero a ser listado.",
                        "schema":{
                            "type":"string"
                        }
                    }
                ],
                "responses":{
                    "200":{
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"array",
                                    "items":{
                                        "$ref":"#/components/schemas/Movie"
                                    }
                                }
                            }
                        }
                    },
                    "500":{
                        "description":"Falha ao filtrar filmes por genero."
                    }
                }
            }
        }

        
    },

    "components":{
        "schemas":{
            "Movie":{
                "type":"object",
                "properties":{
                    "id":{
                        "type":"integer",
                        "description":"Id do Filme"
                    },
                    "title":{
                        "type":"string",
                        "description":"Descrição do filme"
                    },
                    "genre_id":{
                        "type":"integer",
                        "description":"Genero do filme"
                    },
                    "genre":{
                        "type":"object",
                        "properties":{
                            "id":{
                                "type":"integer",
                                "description":"Id do genero"
                            },
                            "name":{
                                "type":"string",
                                "description":"Nome do genero"
                            }
                        }
                    },
                    "language_id":{
                        "type":"integer",
                        "description":"Idioma do filme"
                    },
                    "language":{
                        "type":"object",
                        "properties":{
                            "id":{
                                "type":"integer",
                                "description":"Id do idioma"
                            },
                            "name":{
                                "type":"string",
                                "description":"Nome do idioma"
                            }
                        }
                    },
                    "oscar_count":{
                        "type":"integer",
                        "description":"Quantidade de oscar's obtidos."
                    },
                    "release_data":{
                        "type":"string",
                        "format":"date",
                        "description":"Data de lançamento do filme."
                    }
                }
            },

            "MovieInput":{
                "type":"object",
                "required":[
                    "title",
                    "genre_id",
                    "language_id",
                    "oscar_count",
                    "release_data"
                ],
                "properties":{
                    "title":{
                        "title":"string",
                        "description":"Titulo do filme"
                    },
                    "genre_id":{
                        "title":"integer",
                        "description":"Id do genero do filme"
                    },
                    "language_id":{
                        "title":"integer",
                        "description":"Id do idioma do filme"
                    },
                    "oscar_count":{
                        "title":"integer",
                        "description":"Quantidade de oscar's obtidos."
                    },
                    "release_data":{
                        "title":"string",
                        "format":"date",
                        "description":"Data de lançamento do filme."
                    }
                }
            }
        }
    }
}